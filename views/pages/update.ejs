<div class="jumbotron text-center p-5 my-5">
    <h2> Update Event </h2>
</div>
<section class="update">
    <div class="row">
        <div class="col-md-8 col-md-offset-4 m-auto">
            <form action="/events/<%= event.slug %>" method="POST">
                <div class="form-group">
                    <label for="name">Course Name</label>
                    <input type="text" id="name" placeholder="Course Name"
                    name="name" class="form-control" value="<%= event.name %>">
                </div>
                <div class="form-group">
                    <label for="price">Course Price</label>
                    <input type="number" id="price" placeholder="Course Price"
                    name="price" class="form-control" value="<%= event.price %>">
                </div>
                <div class="form-group">
                    <label for="description">Course Description</label>
                    <textarea name="description" id="description"
                        cols="30" rows="10" class="form-control" 
                        placeholder="Course Description">

                        <%= event.description %>
                    </textarea>
                </div>
                <input type="submit" value="Update Event" 
                    class="btn btn-success">
            </form>
        </div>
    </div>
</section>